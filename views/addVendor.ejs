<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/addVendor.css" />
    <script src = "/js/addVendor.js"></script>

    <title>Vendor Registration</title>

  </head>
  <%- include('header.ejs') %>
  <body>
    
    <div class="card text-center">
        
     

      
            <div class="card-header">
                Vendor Registration
              </div>

        <form>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="vendorname_first">First Name</label>
                <input type="text" class="form-control" id="vendorname_first" placeholder="">
              </div>
              <div class="form-group col-md-6">
                <label for="vendorname_last">Last Name</label>
                <input type="text" class="form-control" id="vendorname_last" placeholder="">
              </div>
            </div>
            <div class="form-group">
              <label for="company">Company</label>
              <input type="text" class="form-control" id="company" placeholder="">
            </div>
            <div class="form-group">
              <label for="company_email">Email</label>
              <input type="email" class="form-control" id="company_email" placeholder="">
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="business_license">Business License Number</label>
                <input type="text" class="form-control" id="business_license">
              </div>
              <div class="form-group col-md-6">
                <label for="contact1">Contact Number</label>
                <input type="number" class="form-control" id="contact1">
              </div>
            </div>
            
            <button type="submit" id="submit_vendor" class="btn btn-primary button" onclick="window.location = '/addVendor'" >Submit</button>
            <a href = "/" type="button" class="btn btn-primary button">Home</a>
          </form>
      </div>
  
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
<%- include('footer.ejs') %>
