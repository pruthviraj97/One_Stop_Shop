<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script src="/js/adminDashboard.js"></script>



</head>
<body>

<div style="margin:6rem 10rem">

<nav class="navbar navbar-expand-md navbar-light bg-light">

    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
        <div class="navbar-nav">
            <a href="#" class="nav-item nav-link active">Home</a>
            
        </div>
        <!-- <form class="form-inline">
            <div class="input-group">                    
                <input type="text" class="form-control" placeholder="Search">
                <div class="input-group-append">
                    <button type="button" class="btn btn-secondary"><i class="fa fa-search"></i></button>
                </div>
            </div>
        </form> -->
        <td class="py-2">
         
          <button type="button" class="btn btn-sm btn-success"><i class="fa fa-edit"></i>Edit</button>
          <button type="button" class="btn btn-sm btn-info">View All</button>
        </td>
        
    </div>
</nav>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Userid</th>
      <th scope="col">User Name</th>
      <th scope="col">User Email</th>
      <th scope="col">Status</th>
      <th scope="col">Company</th>
      
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < Vendors.length; i++) { %>
      <tr>
        <th scope="row"><%= Vendors[i].id %></th>
        <td><%= Vendors[i].lastName %></td>
        <td><%= Vendors[i].emailId %></td>
        <td><%= Vendors[i].status %></td>
        <td><%= Vendors[i].company %></td>
        
        <% if( Vendors[i].status == 0 ) { %>
          <td class="py-2">            
            <button type="button" onClick="AcceptVendor('Accept', '<%= Vendors[i].id %>')" class="btn btn-sm btn-success"><i class="fa fa-edit"></i>Accept</button>
            <button type="button" onClick="DeclineVendor('Decline', '<%= Vendors[i].id %>')" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i>Decline</button>
          </td>
        <% } %>
        <% if( Vendors[i].status == 1 ) { %>
          <td class="py-2">  
            <h4>Accepted</h4>         
          </td>
        <% } %>
        <% if( Vendors[i].status == 2 ) { %>
          <td class="py-2">            
            <td class="py-2">  
              <h4>Declined</h4>         
            </td>
          </td>
        <% } %>
      </tr>
    <% } %>
    
  </tbody>
</table>

</div>

</body>
<%- include('footer.ejs') %>
</html>
